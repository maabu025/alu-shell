#!/usr/bin/env bash
#Loops from 1 to 20 and displaced:
#  "bad luck from China" for the 4th loop iteration
#  "bad luck from Japan" for the 9th loop iteration
#  "bad luck from Italy" for the 17th loop iteration


i=1
while [[ $i -le 10 ]]; do
    if [ $i -eq 4 ]; then
	echo "bad luck"
    elif [ $i -eq 8 ]; then
	echo "good luck"
    else
	echo "Holberton School"
    fi
    let i+=1
done
